<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:text="Click to Edit"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
		android:id="@+id/prev1"
	    android:layout_column="0"
	    android:layout_gravity="left|bottom"
	    android:layout_row="9"
	    android:onClick="onPreviousButtonClick"
	    android:text="Previous" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Handlers"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/handlerSpinner"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="1" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="Dogs"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/dogSpinner"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="2" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:text="Experimentals"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/experimentalSpinner"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="3" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="4"
        android:text="Controls"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/controlSpinner"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="4" />
    
</GridLayout>